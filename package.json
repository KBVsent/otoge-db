{
  "name": "ongeki-db",
  "id": "ongeki-db",
  "version": "1.0.0",
  "description": "Song information viewer for Ongeki",
  "keywords": [
    "ongeki"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zvuc/ongeki-db"
  },
  "homepage": "https//ongeki.info",
  "license": "MIT",
  "author": {
    "name": "Hansol Kim <zvuc@usagi.moe>",
    "url": "https://xenosium.com"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "concurrently": "^8.2.2",
    "cssnano": "^4.1.10",
    "imageoptim-cli": "^3.0.2",
    "less": "^3.11.1",
    "minify": "^6.0.0",
    "postcss-cli": "^7.1.1",
    "postcss-load-config": "^2.1.0",
    "postcss-plugin": "^1.0.0",
    "watch": "^1.0.2"
  },
  "postcss": {
    "map": false,
    "plugins": {
      "autoprefixer": {},
      "cssnano": {}
    }
  },
  "less-watch-compiler": {
    "minified": false
  },
  "scripts": {
    "update": "yarn fetch && yarn imageoptim",
    "fetch": "python3 scripts/main.py",
    "imageoptim": "cat diffs.txt | xargs imageoptim",

    "build": "yarn shared-build & ongeki-build & yarn chuni-build",
    "less": "yarn ongeki-less & yarn chuni-less",
    "postcss": "yarn ongeki-postcss & yarn chuni-postcss",
    "minify": "yarn shared-minify & yarn ongeki-minify & yarn chuni-minify",
    "watch": "concurrently \"yarn shared-watch\" \"yarn ongeki-watch\" \"yarn chuni-watch\"",

    "datatables-minify": "minify _shared/src/datatables/datatables.custom.js > _shared/datatables.custom.min.js",

    "shared-build": "yarn shared-minify",
    "shared-minify": "minify _shared/src/js/*.js > _shared/shared-functions.js",
    "shared-watch": "watch 'yarn shared-build' ./_shared/src/js -d",

    "ongeki-build": "yarn ongeki-minify & (yarn ongeki-less && yarn ongeki-postcss)",
    "ongeki-less": "lessc ./ongeki/src/less/ongeki.less ./ongeki/style.css",
    "ongeki-postcss": "postcss ./ongeki/style.css -o ./ongeki/style.css --verbose",
    "ongeki-minify": "minify ongeki/src/js/*.js > ongeki/ongeki-functions.js",
    "ongeki-watch": "watch 'yarn ongeki-build' ./_shared/src/less ./ongeki/src -d",

    "chuni-build": "yarn chuni-minify & (yarn chuni-less && yarn chuni-postcss)",
    "chuni-less": "lessc ./chunithm/src/less/chunithm.less ./chunithm/style.css",
    "chuni-postcss": "postcss ./chunithm/style.css -o ./chunithm/style.css --verbose",
    "chuni-minify": "minify chunithm/src/js/*.js > chunithm/chunithm-functions.js",
    "chuni-watch": "watch 'yarn chuni-build' ./_shared/src/less ./chunithm/src -d"
  },
  "dependencies": {}
}
