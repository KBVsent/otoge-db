{
  "name": "ongeki-db",
  "id": "ongeki-db",
  "version": "1.0.0",
  "description": "Song information viewer for Ongeki",
  "keywords": [
    "ongeki"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zvuc/ongeki-db"
  },
  "homepage": "https//ongeki.info",
  "license": "MIT",
  "author": {
    "name": "Hansol Kim <zvuc@usagi.moe>",
    "url": "https://xenosium.com"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "cssnano": "^4.1.10",
    "imageoptim-cli": "^3.0.2",
    "less": "^3.11.1",
    "minify": "^6.0.0",
    "postcss-cli": "^7.1.1",
    "postcss-load-config": "^2.1.0",
    "postcss-plugin": "^1.0.0",
    "watch": "^1.0.2"
  },
  "postcss": {
    "map": false,
    "plugins": {
      "autoprefixer": {},
      "cssnano": {}
    }
  },
  "less-watch-compiler": {
    "minified": false
  },
  "scripts": {
    "build": "yarn minify && yarn less && yarn postcss",
    "less": "lessc src/less/style.less style.css",
    "postcss": "postcss style.css -o style.css --verbose",
    "minify": "minify src/js/core.*.js > functions.js && minify datatables/datatables.custom.js > datatables/datatables.custom.min.js && minify src/js/jquery*.js > jquery.min.js",
    "watch": "watch 'yarn build' ./src -d",
    "fetch": "python3 scripts/main.py",
    "imageoptim": "cat diffs.txt | xargs imageoptim",
    "update": "yarn fetch && yarn imageoptim",
    "chuni-build": "yarn chuni-minify && yarn chuni-less && yarn chuni-postcss",
    "chuni-less": "lessc ./chunithm/src/less/style.less ./chunithm/style.css",
    "chuni-postcss": "postcss ./chunithm/style.css -o ./chunithm/style.css --verbose",
    "chuni-minify": "minify chunithm/src/js/core.*.js > chunithm/functions.js && minify chunithm/datatables/datatables.custom.js > chunithm/datatables/datatables.custom.min.js && minify chunithm/src/js/jquery*.js > chunithm/jquery.min.js",
    "chuni-watch": "watch 'yarn chuni-build' ./chunithm/src -d"
  }
}
